<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/tv_ip_v4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="IP v4:"/>

    <TextView
        android:id="@+id/tv_ip_v6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="IP v6:"/>

    <Button
        android:id="@+id/btn_calculate_constraintlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算约束布局偏移量"/>

    <Button
        android:id="@+id/btn_view_system_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看系统资源图标"/>

    <Button
        android:id="@+id/btn_app_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看App信息(包括md5&amp;sha1&amp;sha256签名)"/>
</LinearLayout>