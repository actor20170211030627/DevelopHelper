<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:justifyContent="space_between">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_open_development"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onViewClicked"
                android:text="开发者选项" />

            <Button
                android:id="@+id/btn_open_develop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onViewClicked"
                android:text="开发" />

            <Button
                android:id="@+id/btn_open_develop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onViewClicked"
                android:text="开发(部分小米)" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_calculate_constraintlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="计算约束布局偏移率bias" />

        <Button
            android:id="@+id/btn_view_system_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="查看系统资源图标" />

        <Button
            android:id="@+id/btn_app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="查看App信息(包括Md5&amp;Sha1&amp;Sha256签名)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_view_page_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onViewClicked"
                android:text="查看当前页面包名&amp;类名(需辅助功能)" />

            <Button
                android:id="@+id/btn_stop_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onViewClicked"
                android:text="停止查看" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_glide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="Glide使用" />

        <Button
            android:id="@+id/btn_canvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="Canvas绘制" />

        <Button
            android:id="@+id/btn_encrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="Encrypt加密解密" />

        <Button
            android:id="@+id/btn_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="Animation动画" />

        <Button
            android:id="@+id/btn_file_rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="File重命名" />

        <Button
            android:id="@+id/btn_android5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="android 5.0新特性" />

        <Button
            android:id="@+id/btn_expandable_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="分组的伸缩栏(ExpandableItemAdapter)" />


        <Button
            android:id="@+id/btn_c_call_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="C&amp;Java互调测试" />

        <Button
            android:id="@+id/btn_github_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onViewClicked"
            android:text="获取 Github Host(用于配置电脑host,解决Github图片等无法访问等问题.)" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="View on Gitee:\n
https://gitee.com/actor20170211030627/DevelopHelper" />

        <TextView
            android:id="@+id/tv_ip_v4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            tools:text="IP(v4): " />

        <TextView
            android:id="@+id/tv_ip_v6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            tools:text="IP(v6): " />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBarSize"
            android:gravity="center"
            tools:text="VersionName: 1.0.0(VersionCode: 1)" />
    </com.google.android.flexbox.FlexboxLayout>
</androidx.core.widget.NestedScrollView>