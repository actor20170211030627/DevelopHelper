<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/tv_ip_v4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="IP v4:" />

    <TextView
        android:id="@+id/tv_ip_v6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="IP v6:" />

    <Button
        android:id="@+id/btn_calculate_constraintlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算约束布局偏移量" />

    <Button
        android:id="@+id/btn_view_system_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看系统资源图标" />

    <Button
        android:id="@+id/btn_app_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看App信息(包括Md5&amp;Sha1&amp;Sha256签名)" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:text="View on Github:\n
https://github.com/actor20170211030627/DevelopHelper" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:gravity="center"
        tools:text="VersionName: 1.0.0(VersionCode: 1)" />
</LinearLayout>